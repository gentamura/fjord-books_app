<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %><p id="notice"><%= notice %></p><% end %>
    <% if alert %><p style="color:red;"><%= alert %></p><% end %>

    <% if user_signed_in? %>
      <div>
        <strong><%= current_user.email %></strong>
        <%= link_to t('views.common.edit'), edit_user_registration_path %> |
        <%= link_to t('devise.sessions.destroy.sign_out'), destroy_user_session_path, method: :delete %>
      </div>

      <hr />

      <div>
        <%= link_to Book.model_name.human, books_path %> |
        <%= link_to User.model_name.human, users_path %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
